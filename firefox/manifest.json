{
  "manifest_version": 2,
  "name": "Hotstar Ad Muter",
  "version": "1.0",
  "description": "Mute Hotstar ads",
  "icons": {
    "48": "48.png",
    "128": "128.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "*://*.hotstar.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
