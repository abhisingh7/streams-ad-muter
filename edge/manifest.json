{
  "manifest_version": 3,
  "name": "Hotstar Ad Muter (Edge)",
  "version": "1.0",
  "description": "Automatically mutes audio during ads on Hotstar for Edge.",
  "permissions": [
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "*://*.hotstar.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "48.png",
    "128": "128.png"
  }
} 